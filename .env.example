# Copy this file to `.env` and fill in values as needed.

# Path to the provided dataset CSV
DATASET_PATH=take_home_dataset.csv

# Directory to persist the ChromaDB vector store
CHROMA_DIR=vectorstore

# SentenceTransformer embedding model name
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Optional: OpenAI API key and model for LLM summaries
# If not set, app will use a simple built-in summarizer
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Optional: basic settings
LOG_LEVEL=INFO
CACHE_TTL=60
RATE_LIMIT=60
